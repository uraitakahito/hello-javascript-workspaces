{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"formatter": {
		"ignore": [
			"dist/**",
			".vscode/**",
			"package.json",
			"./.Trash-501/**",
			"node_modules/**"
		],
		"formatWithErrors": true
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "always",
			"trailingCommas": "all",
			"lineWidth": 120,
			"indentStyle": "space",
			"indentWidth": 4,
			"quoteProperties": "preserve",
			"lineEnding": "lf"
		}
	},
	"linter": {
		"enabled": false
	}
}
